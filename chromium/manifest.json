{
    "manifest_version": 3,
    "name": "Google Sign-In Popup Blocker",
    "version": "0.1",
    "description": "Blocks the Google Sign-In popups from appearing on websites",
    "permissions": [
        "webNavigation",
        "declarativeNetRequest",
        "storage",
        "activeTab"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "declarative_net_request": {
        "rule_resources": []
    }
}
